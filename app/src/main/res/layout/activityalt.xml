<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/alt_left_column"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/alt_right_column"
        app:layout_constraintWidth_percent="0.56">

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Profile photo"
            android:scaleType="centerCrop"
            android:src="@android:drawable/sym_def_app_icon"
            android:background="@android:color/darker_gray"
            android:adjustViewBounds="true"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">
            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@example.edu"
                android:layout_marginStart="8dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp">
            <TextView
                android:id="@+id/extensionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ext:"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:layout_marginStart="8dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp">
            <TextView
                android:id="@+id/departmentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dept:"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example Dept"
                android:layout_marginStart="8dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp">
            <TextView
                android:id="@+id/supervisorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supervisor:"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/supervisor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supervisor Name"
                android:layout_marginStart="8dp"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alt_right_column"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/alt_left_column"
        app:layout_constraintWidth_percent="0.44"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/directReportsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direct Reports"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/directReportsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="ifContentScrolls"
            android:clipToPadding="false" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>